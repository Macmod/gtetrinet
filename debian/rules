#!/usr/bin/make -f

INSTALL_BASE=`pwd`/debian/tmp

package=gtetrinet

build:
	dh_testdir

	./configure --prefix=/usr
	$(MAKE)
	touch build

clean:
	dh_testdir
	dh_testroot

	rm -f build
	-$(MAKE) -i distclean

	dh_clean

binary-indep:

binary-arch:	build
	dh_testdir -a
	dh_testroot -a

	$(MAKE) install DESTDIR=$(INSTALL_BASE)

	dh_installdocs -a
	dh_installchangelogs -a ChangeLog
	dh_installmenu -a
	dh_strip -a
	dh_compress -a
	dh_fixperms -a
	dh_shlibdeps -a
	dh_gencontrol -a
	dh_md5sums -a
	dh_builddeb -a

binary:		binary-indep binary-arch
